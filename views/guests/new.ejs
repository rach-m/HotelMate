     <% include ../partials/header %>
<%let states = ["AK", "AL", "AR", "AZ", "CA", "CO", "CT", "DC",
    "DE", "FL", "GA", "HI", "IA", "ID", "IL", "IN", "KS", "KY", "LA",
    "MA", "MD", "ME", "MI", "MN", "MO", "MS", "MT", "NC", "ND", "NE",
    "NH", "NJ", "NM", "NV", "NY", "OH", "OK", "OR", "PA", "RI", "SC",
    "SD", "TN", "TX", "UT", "VA", "VT", "WA", "WI", "WV", "WY"]%>
<form action = '/guests/new' method = 'POST'>
<div class = 'form-group'>
     <label>First Name: </label><input name = 'fname' type = 'text' required></input><br>
     <label>Last Name: </label><input name = 'lname' type = 'text' required></input><br>
     <label>Email: </label><input name = 'email' type = 'text' required></input><br>
     <label>Street Address:  </label><input name = 'address' type = 'text' required></input><br>
     <label>City: </label><input name = 'city' type = 'text' required></input><br>
     <label>State: </label><select name = 'state'>
    <div id = 'dropdown'> <%states.forEach(state => {%>
     <option value = '<%=state%>'><%=state%></option>
     <%});%>
     </select><br></div>
     <label>Zip Code: </label><input name = 'zip' type = 'text' required></input><br>
          <label>Phone: </label><input name = 'phone' type = 'text' required></input><br>
          <label>Credit Card Number: </label><input name = 'credit_card' type = 'text' required></input><br>
     <label>Check In: </label><input type = 'date' name = 'check_in' required><br>
     <label>Check Out: </label><input type = 'date' name = 'check_out' required><br>
     <label>Room Number Request: </label><input type = 'text' name = 'room_number' required><br>
      <label>Late Check Out: </label><select name = 'late_checkout'>
    <option value = 'Y'>Yes</option>
    <option value = 'N'>No</option>
</select><br>
     <input class = 'btn btn-secondary' type = 'submit' value = 'Create New Reservation '>
     </div>
</form>


    <% include ../partials/footer %>
