    <% include ../partials/header %>
    <h1><%=guest.fname%> <%=guest.lname%></h1>
    <h2>Check In: <%=checkIn%></h2>
    <h2>Check Out: <%=checkOut%></h2>
    <h2>Room: <%=reservation.room_number%></h2>
<br>
    <p>Address: <%=guest.address%> <%=guest.city%>, <%=guest.state%> <%=guest.zip%></p>
    <p>Phone: <%=guest.phone%></p>
    <p>Email: <%=guest.email%></p>
    <p>Credt Card #: <%=guest.credit_card%></p>
    <%if (reservation.late_checkout === 'Y'){%>
   <p> Check Out Time: 12:00 PM </p>
<%}%>
<%if(reservation.late_checkout === 'N'){%>
<p>Check Out Time: 11:00 AM</p>
<%}%>
<!-- Button trigger modal -->


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Confirmation</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete <%=guest.fname%> <%=guest.lname%>'s reservation?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
        <form action = '/guests/<%=guest.guest_id%>?_method=DELETE' method = 'POST'>
        <button type='submit' class="btn btn-secondary">Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>
<a href ='/guests/<%=guest.guest_id%>/edit'><button class = 'button'>EDIT RESERVATION</button></a>
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
  DELETE
</button>
