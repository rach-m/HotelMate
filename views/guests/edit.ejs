     <% include ../partials/header %>
<% let states = ["AK", "AL", "AR", "AZ", "CA", "CO", "CT", "DC",
    "DE", "FL", "GA", "HI", "IA", "ID", "IL", "IN", "KS", "KY", "LA",
    "MA", "MD", "ME", "MI", "MN", "MO", "MS", "MT", "NC", "ND", "NE",
    "NH", "NJ", "NM", "NV", "NY", "OH", "OK", "OR", "PA", "RI", "SC",
    "SD", "TN", "TX", "UT", "VA", "VT", "WA", "WI", "WV", "WY"] %>
<form action = '/guests/<%=guest.guest_id%>/edit?_method=PUT' method = 'POST'>
     <label>First Name: </label><input name = 'fname' type = 'text' value = '<%=guest.fname%>'></input><br>
     <label>Last Name: </label><input name = 'lname' type = 'text' value = '<%=guest.lname%>'></input><br>
     <label>Email: </label><input name = 'email' type = 'text' value = '<%=guest.email%>'></input><br>
     <label>Street Address:  </label><input name = 'address' type = 'text' value = '<%=guest.address%>'></input><br>
     <label>City: </label><input name = 'city' type = 'text' value = '<%=guest.city%>'></input><br>
   <label>State: </label><select name = 'state'>
    <div id = 'dropdown'> <%states.forEach(state => {%>
     <option value = '<%=guest.state%>'><%=state%></option>
     <%});%>
     </select><br></div>
     <label>Zip Code: </label><input name = 'zip' type = 'text' value = '<%=guest.zip%>'></input><br>
          <label>Phone: </label><input name = 'phone' type = 'text' value = '<%=guest.phone%>'></input><br>
          <label>Credit Card Number: </label><input name = 'credit_card' type = 'text' value = '<%=guest.credit_card%>'></input><br>
     <label>Check In: </label><input type = 'date' name = 'check_in' value = '<%=checkIn%>'><br>
     <label>Check Out: </label><input type = 'date' name = 'check_out' value = '<%=checkOut%>'><br>
     <label>Room Number Request: </label><input type = 'text' name = 'room_number' value = '<%=reservation.room_number%>'><br>
     <label>Late Check Out: </label><select name = 'late_checkout' value = '<%=guest.late_checkout%>'>
<option value = 'Y'>Yes</option>
<option value = 'N'>No</option>
</select><br>
     <input type = 'submit' value = 'Edit Reservation'>
</form>


    <% include ../partials/footer %>
